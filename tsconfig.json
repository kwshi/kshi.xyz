{
  "extends": "./.svelte-kit/tsconfig.json",
  "compilerOptions": {
    "module": "esnext",
    "lib": ["DOM", "ES2017", "WebWorker"],
    "checkJs": true,
    "strict": true,
    "sourceMap": true,
    "typeRoots": ["./node_modules/@types", "./src/declarations"],
    "types": ["node"],
    "paths": {
      "$lib": ["src/lib"],
      "$lib/*": ["src/lib/*"],
      "$components/*": ["src/components/*"]
    }
  }
}
