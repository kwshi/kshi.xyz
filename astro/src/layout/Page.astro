---
import Html from "$layout/Html.astro";
import Background from "$component/Background.astro";
import Feather from "$component/Feather.astro";
---

<Html title="kye’s shinanigans">
  <Background />
  <header>
    <button>
      <Feather icon="menu" />
    </button>
    <h1>kye’s shinanigans</h1>
  </header>
  <main>
    <slot />
  </main>
</Html>

<style>
  header,
  button,
  h1 {
    position: relative;
  }

  header {
    --color-header-top: #0dd;
    --color-header-bottom: #324;

    display: flex;
    align-items: flex-start;
    margin-bottom: 1rem;
  }

  button {
    background: none;
    border: none;
    outline: none;
    cursor: pointer;
    font-size: 1.5rem;
    line-height: 1rem;
    padding: 0.75rem;

    color: color-mix(
      in srgb,
      var(--color-header-top),
      var(--color-header-bottom)
    );
  }

  h1 {
    font-size: calc(5rem / 3);
    margin: 0;
    padding: 1rem 0;
    line-height: 1em;
    user-select: none;

    font-family: "Ysabeau Infant Variable";
    font-weight: 600;
    -webkit-text-fill-color: transparent;

    background-image: linear-gradient(
      to bottom,
      var(--color-header-top),
      var(--color-header-bottom)
    );
    background-clip: text;
  }

  @media (min-width: 64rem) {
    button {
      display: none;
    }
    h1 {
      margin-left: 1rem;
    }
  }

  main {
    position: relative;
    padding: 0 1rem;
    margin: 0 auto;
    max-width: 48rem;

    font-family: "Ysabeau Office Variable", sans-serif;
    font-size: calc(7rem / 6);
  }
</style>
