---
import Html from "$layout/Html.astro";
import Background from "$component/Background.astro";
import Feather from "$component/Feather.astro";
---

<Html title="kye’s shinanigans">
  <Background />
  <header>
    <button>
      <Feather icon="menu" />
    </button>
    <h1><a href="/">kye’s shinanigans</a></h1>
    <nav>
      <ul>
        <li>
          <a href="/">home</a>
        </li>
        <li>
          <a href="/notes">notes for nerds</a>
        </li>
        <li><a href="/art">artsy stuff</a></li>
        <li><a href="/photos">photos</a></li>
        <li><a href="/toys">toys</a></li>
      </ul>
    </nav>
  </header>
  <main>
    <slot />
  </main>
</Html>

<style>
  header,
  button,
  h1 {
    position: relative;
  }

  header {
    --color-header-top: #0dd;
    --color-header-bottom: #324;

    display: flex;
    align-items: center;
    margin-bottom: 1rem;

    font-family: "Ysabeau Infant Variable";
  }

  nav {
    font-size: calc(4rem / 3);
    margin-left: auto;
    margin-right: 2rem;
    font-weight: 500;
    --color-nav: color-mix(
      in srgb,
      var(--color-header-top) 25%,
      var(--color-header-bottom)
    );
    color: var(--color-nav);
  }

  ul {
    display: flex;
    list-style-type: none;
    margin: 0;
    padding: 0;
  }

  li:not(:last-child) {
    &::after {
      content: "⋅";
      margin: calc(1em / 2);
      opacity: calc(1 / 2);
    }
  }

  a {
    text-decoration: none;
    color: inherit;
    transition: 50ms text-shadow;
    &:hover {
      text-shadow: 0 0 calc(1em / 16) var(--color-nav);
    }
  }

  button {
    background: none;
    border: none;
    outline: none;
    cursor: pointer;
    font-size: 1.5rem;
    line-height: 1rem;
    padding: 0.75rem;

    color: color-mix(
      in srgb,
      var(--color-header-top),
      var(--color-header-bottom)
    );
  }

  h1 {
    font-size: calc(5rem / 3);
    margin: 0;
    padding: 1rem 0;
    user-select: none;

    font-weight: 600;
    -webkit-text-fill-color: transparent;

    background-image: linear-gradient(
      to bottom,
      var(--color-header-top),
      var(--color-header-bottom)
    );
    background-clip: text;
  }

  @media (min-width: 64rem) {
    button {
      display: none;
    }
    h1 {
      margin-left: 2rem;
    }
  }

  main {
    position: relative;
    padding: 0 1rem 4rem 1rem;
    margin: 0 auto;
    max-width: 48rem;

    font-family: "Ysabeau Office Variable", sans-serif;
    font-size: calc(7rem / 6);
  }
</style>
