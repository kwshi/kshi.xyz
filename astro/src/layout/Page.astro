---
import Html from "$layout/Html.astro";
import Background from "$component/Background.astro";
import Feather from "$component/Feather.astro";
---

<Html title="kye’s shinanigans">
  <Background />
  <header>
    <button>
      <Feather icon="menu" />
    </button>
    <h1>kye’s shinanigans</h1>
  </header>
  <main>
    <slot />
  </main>
</Html>

<style>
  header {
    position: relative;
    display: flex;
    align-items: flex-start;
  }

  button {
    position: relative;
    background: none;
    border: none;
    outline: none;
    cursor: pointer;
    font-size: 1.5rem;
    line-height: 1rem;
    padding: 0.75rem;

    color: color-mix(in srgb, #0ee, #435);
  }

  h1 {
    position: relative;
    font-size: 1.5rem;
    margin: 0;
    padding: 1rem 0;
    line-height: 1rem;
    user-select: none;

    font-family: "YsabeauInfant";
    font-weight: 600;

    background-image: linear-gradient(to bottom, #0ee, #435);
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media (min-width: 64rem) {
    button {
      display: none;
    }
    h1 {
      margin-left: 1rem;
    }
  }

  main {
    position: relative;
    padding: 0 1rem;
    margin: 0 auto;
    max-width: 48rem;
  }
</style>
