---
import Page from "$layout/Page.astro";
type Props = { readonly title: string };
---

<Page>
  <article>
    <slot />
  </article>
</Page>

<style>
  article {
    & :global(h1) {
      color: #634;
      font-size: 1.5em;
      margin: 0.5em 0;
    }

    & :global(p) {
      margin: 0.5em 0;
    }

    & :global(a) {
      color: #078;
      text-decoration-color: #0784;
    }

    & :global(.katex) {
      font-size: 1em;
    }
  }
</style>
